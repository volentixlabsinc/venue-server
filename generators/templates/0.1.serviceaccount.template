apiVersion: v1
kind: ServiceAccount
metadata:
  name: nginx-sa
  namespace: venue-{{namespace}}
---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: nginx-sa
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
  - kind: ServiceAccount
    name: nginx-sa
    namespace: venue-{{namespace}}